html 
    head 
        style(type='text/css').
      
            table, th, td {
                border: 1px solid black;
            }
            
        title OAuth2/OpenID login demo
    body
        if admin 
            h1 Prijavljeni ste kao admin
        else if username
            h1 Dobro došao #{username}
        else 
            h1 Anonimni korisnik 
            p.
                Želiš se prijaviti u 
                #[a(href='/log-in', title='Log in') postojeći] 
                ili stvoriti
                #[a(href='/sign-up', title='Sign up') novi] 
                korisnički račun ?
        if username
            form(action="/logout", method="get")
                input(type="submit", value="Logout " + username)
        table 
            tr
                th Naziv tima
                th Razlika
                th Bodovi
            
            each tim in timovi  
                    tr 
                        td  #{tim.ime}
                        td  #{tim.razlika}
                        td  #{tim.bodovi}
                


        -for(var i=0;i<4;i++){
            p KOLO #{i+1}
            -for (var j = i*4; j < 4*(1+i); ++j) {
                if admin 
                    form(action="/urediti",method = "pOST")
                        label(for=`${utakmice[j].tim1_ime}`) #{utakmice[j].tim1_ime}
                        input(type="number" id=`${utakmice[j].tim1_ime}` name=`${utakmice[j].tim1_ime}` min="0" max="200" value= `${utakmice[j].tim1_poeni}`)
                        br
                        label(for=`${utakmice[j].tim2_ime}`) #{utakmice[j].tim2_ime}
                        input(type="number" id=`${utakmice[j].tim2_ime}` name=`${utakmice[j].tim2_ime}` min="0" max="200" value = `${utakmice[j].tim2_poeni}`)
                        input(type="submit" value="Potvrdi promijenu")
                    
                                        
                
                
                
                
                
                table 
                    tr 
                        td  #{utakmice[j].tim1_ime}
                        td  #{utakmice[j].tim1_poeni}
                    tr
                        td  #{utakmice[j].tim2_ime}
                        td  #{utakmice[j].tim2_poeni}
                br
            -}
        -}
        
        